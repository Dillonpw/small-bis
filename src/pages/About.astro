---
import Layout from "../layouts/Layout.astro";
import MoreService from "../components/moreService.astro";
import AboutDesc from "../components/about.astro";
const title = "About";
---

<Layout title="Company Name | About Us">
  <div
    class="mt-20 flex h-[40vh] items-center justify-center bg-[url('/heroIMG.jpeg')] bg-cover bg-center py-20 text-center text-6xl font-bold text-white shadow-xl"
  >
    <p transition:name="heroTxt" transition:animate="slide" class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)]">{title}</p>
  </div>
  <h1 transition:name="introTxt" class="m-10 text-center text-xl font-bold">Doing Business in you area for over 10 years</h1>

  <AboutDesc />
  <MoreService />
</Layout>
