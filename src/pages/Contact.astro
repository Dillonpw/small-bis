---
import Layout from "../layouts/Layout.astro";
import Form from "../components/form.astro";
const title = "Contact";
---

<Layout title="Company Name | Contact Us">
  <div
    class="mt-20 flex h-[40vh] items-center justify-center bg-[url('/heroIMG.jpeg')] bg-cover bg-center py-20 text-center text-6xl font-bold text-white shadow-xl"
  >
    <p transition:name="heroTxt" transition:animate="slide" class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)]">{title}</p>
  </div>
  <p transition:name="introTxt"
  class="font-bold m-10 text-center text-xl"
>
  If you have any questions or concerns please feel free to reach out to us.
  We respond to every email.
</p>
  <Form />
</Layout>
