---
//adjust these variable to change your content
const emailAdress = "NwLrL@example.com";
---

<form
  action=`mailto:${emailAdress}`
  class="mx-auto mt-14 grid max-w-[80%] grid-cols-1 content-center gap-4 md:grid-cols-2"
>
  <div class="col-span-1">
    <label for="name" class="mb-2 block">Name</label>
    <input
      type="text"
      id="name"
      placeholder="Name"
      class="w-full rounded-md border border-gray-300 p-2 text-stone-800 md:w-[86%]"
    />
  </div>
  <div class="col-span-1">
    <label for="email" class="mb-2 block">Email</label>
    <input
      type="email"
      id="email"
      placeholder="Email"
      class="w-full rounded-md border border-gray-300 p-2 text-stone-800 md:w-[86%]"
    />
  </div>
  <div class="col-span-1">
    <label for="location" class="mb-2 block">Location</label>
    <input
      type="text"
      id="location"
      placeholder="Location"
      class="w-full rounded-md border border-gray-300 p-2 text-stone-800 md:w-[86%]"
    />
  </div>
  <div class="col-span-1">
    <label for="how" class="mb-2 block">How Did You Hear About Us?</label>
    <input
      type="text"
      id="how"
      placeholder="Friend, Browsing, etc."
      class="w-full rounded-md border border-gray-300 p-2 text-stone-800 md:w-[86%]"
    />
  </div>
  <div class="col-span-1 md:col-span-2">
    <label for="message" class="mb-2 block">Message:</label>
    <textarea
      id="message"
      placeholder="Message"
      class="h-32 w-full rounded-md border border-gray-300 p-2 text-stone-800 md:w-[93%]"
    ></textarea>
  </div>
  <div class="col-span-1 md:col-span-2">
    <button
      type="submit"
      name="submit"
      class="cursor-pointer rounded-lg bg-blue-400 p-4 text-gray-50 transition delay-150 duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:bg-blue-500"
      >Submit</button
    >
  </div>
</form>
