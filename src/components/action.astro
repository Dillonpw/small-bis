---
import Button from "./button.astro";
const link = "/Contact";
const text = "Get Your Free Estimate"
---

<section
  class="mt-40 flex h-[500px] gap-4 bg-[url('/CTAbg.jpg')] bg-cover text-center text-white"
>
  <div class="flex flex-col w-full h-full items-center justify-center bg-black bg-opacity-30">
    <h1 class="mx-20 pb-10 text-6xl">Suggest Confidence In Your Company</h1>
    <h2 class="mx-10 mb-20 pb-10 text-2xl">
      Quick affirmative line about your company or why a customer would love to
      work with you
    </h2>
<Button link={link} text={text}/>
  </div>
</section>
